{
  "name": "arroyo-erp-models",
  "version": "1.2.2",
  "description": "Models for arroyo erp",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "lint": "eslint **/*.js --ignore-pattern node_modules/"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "lint --fix",
      "test"
    ]
  },
  "files": [
    "models",
    "config",
    "LICENSE",
    "README.md",
    "mongoose-connect.js"
  ],
  "author": "Eduardo Parra Mazuecos",
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "bluebird": "3.7.2",
    "mongodb-memory-server": "^8.5.0",
    "mongoose": "^6.3.0",
    "mongoose-connect": "0.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.5.0",
    "jest": "^28.1.0",
    "jest-circus": "^28.0.0",
    "jest-environment-node": "^28.0.2",
    "pre-commit": "1.2.2",
    "ts-jest": "^28.0.1",
    "ts-standard": "^11.0.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "bail": true,
    "testEnvironment": "<rootDir>/test/mongo-test-environment",
    "setupFilesAfterEnv": [
      "<rootDir>/test/bootstrap-jest.js"
    ],
    "coverageReporters": [
      "json",
      "text-summary",
      "lcov",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/models/**"
    ],
    "coveragePathIgnorePatterns": [],
    "testRunner": "jest-circus/runner"
  },
  "keywords": [
    "database",
    "mongodb"
  ],
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.10"
    }
  }
}
