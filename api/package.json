{
  "name": "node-express-microservice",
  "version": "0.0.1",
  "description": "Template for microservices",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production NTBA_FIX_319=1000 node ./bin/www",
    "start:dev": "NODE_ENV=dev NTBA_FIX_319=1000 nodemon ./bin/www",
    "test": "NODE_ENV=test NTBA_FIX_319=1000 jest --detectOpenHandles --coverage",
    "lint": "ts-standard --fix'",
    "dev": "nodemon",
    "build": "etsc",
    "start2": "node dist/index.js"
  },
  "pre-push": [
    "test",
    "eslint"
  ],
  "keywords": [
    "api",
    "nodeJS"
  ],
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.unionwith": "^4.6.0"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.31",
    "esbuild": "^0.14.38",
    "esbuild-node-tsc": "^1.8.5",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "mongodb-memory-server": "^8.5.1",
    "nock": "^13.2.4",
    "node-mongoose-models": "git+https://github.com/soker90/node-mongoose-models.git",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.2",
    "ts-standard": "^11.0.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "bail": true,
    "testEnvironment": "<rootDir>/test/mongo-test-environment",
    "setupFilesAfterEnv": [
      "<rootDir>/test/bootstrap-jest.js"
    ],
    "coverageReporters": [
      "json",
      "text-summary",
      "lcov",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [],
    "coveragePathIgnorePatterns": [],
    "testRunner": "jest-circus/runner"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.10"
    }
  }
}
