    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-promise": "^7.1.0",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
